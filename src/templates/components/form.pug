form.form.x_order_form(action="/submit", method="post")
  label.form--label.form--label__name
    svg(viewBox="0 0 18 24", width="18")
        use(xlink:href="#user")
    input.form--input(type="text", name="name", placeholder="Имя", required)
  label.form--label.form--label__phone
    svg(viewBox="0 0 18 20", width="18")
      use(xlink:href="#phone")
    input.form--input(type="tel", name="phone", placeholder="Телефон", required)
  button.form--button.btn.bold(type="submit")
